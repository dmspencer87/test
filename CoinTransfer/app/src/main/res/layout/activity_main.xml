<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp"

    tools:context="com.cointransfer.android.coinexchange.MainActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="400dp">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bitcoin Price:"
            tools:visibility="invisible"/>

        <TextView
            android:id="@+id/eText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:textSize="20dp"
            tools:visibility="visible" />

        <Button
            android:id="@+id/bLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/eText"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:gravity="center_horizontal"
            android:text="@string/login_button"
            android:visibility="gone"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/btn_balance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/eText"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="82dp"
            android:textSize="40dp"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/btnBalanceText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/email"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="48dp"
            android:text="WALLET: "
            android:textSize="15dp"
            android:visibility="gone"
            tools:visibility="invisible" />

        <EditText
            android:id="@+id/email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/btn_balance"
            android:layout_marginTop="72dp"
            android:ems="10"
            android:inputType="textPersonName"

            android:visibility="gone"
            tools:visibility="invisible" />

        <EditText
            android:id="@+id/amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/email"
            android:ems="10"
            android:inputType="numberDecimal"
            android:visibility="gone"
            tools:visibility="invisible" />

        <EditText
            android:id="@+id/note"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/amount"
            android:layout_alignStart="@+id/amount"
            android:layout_below="@+id/amount"
            android:ems="10"
            android:inputType="textPersonName"

            android:visibility="gone"
            tools:visibility="invisible"/>

        <TextView
            android:id="@+id/getEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/email"
            android:layout_alignLeft="@+id/getNote"
            android:layout_alignStart="@+id/getNote"
            android:text="Email"
            android:visibility="gone"
            tools:visibility="invisible"/>

        <TextView
            android:id="@+id/getAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/note"
            android:layout_alignLeft="@+id/getEmail"
            android:layout_alignStart="@+id/getEmail"
            android:text="Amount"
            android:visibility="gone"
            android:inputType="numberDecimal"
            tools:visibility="invisible"/>

        <TextView
            android:id="@+id/getNote"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/note"
            android:layout_alignLeft="@+id/btnBalanceText"
            android:layout_alignStart="@+id/btnBalanceText"
            android:text="Note"
            android:visibility="gone"
            tools:visibility="invisible"/>


    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/sentBTC"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="SEND"
            android:visibility="gone"
            tools:visibility="invisible" />

        <Button
            android:id="@+id/qr_scanner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="QRScanner"
            android:visibility="gone"
            tools:visibility="invisible" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <Button
            android:id="@+id/logout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Logout"
            android:visibility="gone"
            tools:visibility="invisible"/>
    </LinearLayout>


</LinearLayout>


